{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "lib": ["ES2019"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
